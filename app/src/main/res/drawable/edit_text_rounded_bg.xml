<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/transparent" />
            <stroke
                android:width="0.5dp"
                android:color="@color/transparent" />
             <corners android:radius="10dp"/>

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>

            <stroke
                android:width="0.5dp"
                android:color="@color/black" />
             <solid
                android:color="@color/transparent" />

            <padding
                android:left="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
