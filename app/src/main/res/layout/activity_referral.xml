        android:layout_marginBottom="@dimen/marginSizeLarge"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/makereferral_patient_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

