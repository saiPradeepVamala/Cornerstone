<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />

    <application
        android:name="com.cornerstonehospice.android.application.CornerStoneApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        tools:targetApi="31" >

        <activity
            android:name="com.cornerstonehospice.android.activities.SplashActivity"
            android:theme="@style/AppTheme"
            android:configChanges="orientation|keyboard|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cornerstonehospice.android.activities.MainDashboardActivity"
            android:label="@string/dashboard_dashboard_title_txt"
            android:theme="@style/HeaderedViewpagerTheme"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation|keyboard|screenSize">
        </activity>
        <!--  android:parentActivityName="com.cornerstone.android.activities.MainActivity" -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.cornerstonehospice.android.activities.MainActivity" />


        <uses-library android:name="android.test.runner" />

        <activity android:name="com.cornerstonehospice.android.activities.ReferralActivity" />
        <activity android:name="com.cornerstonehospice.android.activities.BMIActivity" />
        <activity
            android:name="com.cornerstonehospice.android.activities.CriteriaListActivity"
            android:label="@string/title_activity_criteria_list" >
        </activity>
        <activity
            android:name="com.newsstand.SlidingViewPagerMainActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/HeaderedViewpagerTheme"
            android:windowSoftInputMode="adjustPan"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name="com.cornerstonehospice.android.customcamera.CameraActivity"
            android:screenOrientation="fullSensor"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name="com.cornerstonehospice.android.activities.PreviewActivity"
            android:label="@string/title_activity_preview"
            android:theme="@style/HeaderedViewpagerTheme" >
        </activity>
        <activity
            android:name="com.cornerstonehospice.android.activities.TakePictureActivity"
            android:label="@string/title_activity_take_picture"
            android:theme="@style/HeaderedViewpagerTheme"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>

        <!-- Adding new Activity to change the layout -->
        <activity android:name="com.cornerstonehospice.android.activities.MainActivity"
            android:configChanges="orientation|keyboard|screenSize"/>

    </application>

</manifest>